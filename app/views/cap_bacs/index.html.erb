<p id="notice"><%= notice %></p>

<h1>Cap Bacs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cap_bacs.each do |cap_bac| %>
      <tr>
        <td><%= cap_bac.name %></td>
        <td><%= cap_bac.description %></td>
        <td><%= cap_bac.enabled %></td>
        <td><%= link_to 'Show', cap_bac %></td>
        <td><%= link_to 'Edit', edit_cap_bac_path(cap_bac) %></td>
        <td><%= link_to 'Destroy', cap_bac, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

